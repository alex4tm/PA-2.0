<div class="container">

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1582920980795-2f97b0834c58?ixid=MXwxMjA3fDB8MHxzZWFyY2h8M3x8cmVzdGF1cmFudHN8ZW58MHx8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=900&q=60);">
  <div class="container">
    <div class="d-flex justify-content-between pt-3 mt-2" >

       <%= form_tag categories_path, method: :get do %>
        <div class="d-flex justify-content-between">

          <%= text_field_tag :search,
            params[:search],
            class: "form-control",
            placeholder: "Insert User ID"
          %>
          <%= submit_tag "🔍Search", class: "btn btn-primary"  %>

        </div>
      <% end %>

      <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header">
          <h1> <%= @restaurant.name %> </h1>
        </div>
        <div class="card-body">
          <p class="card-text">Rating: <%= "⭐" *  @restaurant.rating %>  </p>
        </div>
      </div>
    </div>


  </div>
</div>


<div class="availability">
  <div class="form-wrapper" style="width: 270px;">
    <h1><i class="far fa-calendar-alt"></i></h1>

    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Check",class: "btn btn-success"%>
    <% end %>
  </div>
</div>


  <div class="d-flex justify-content-between pt-3" >
    <h1>Bookings</h1>
       <%= form_tag categories_path, method: :get do %>
        <div class="d-flex justify-content-between">

          <%= text_field_tag :search,
            params[:search],
            class: "form-control",
            placeholder: "Find an item"
          %>
          <%= submit_tag "🔍Search", class: "btn btn-primary"  %>

        </div>
      <% end %>
  </div>

  <% @bookings.each do |booking| %>

    <div class="card-product mt-2 rounded">
      <div class="card-product-infos ">
        <h2><%= booking.user.first_name %></h2>
        <p>Start date: <%= booking.start_date %></p>
        <p>Number of guests: <%= booking.number_of_guests %></p>
        <p>Note: <%= booking.notes %></p>
      </div>
    </div>

  <% end %>

</div>
