
  <!-- START Display the user details based on the search -->
  <div class="container">
    <div class="d-flex justify-content-between">
      <%= form_tag restaurant_bookings_path(@restaurant), method: :get do %>
        <div class="d-flex">
                <%= text_field_tag :search,
                  params[:search],
                  class: "form-control",
                  placeholder: "Insert User ID"
                %>
          <%= submit_tag "ðŸ”Search", class: "btn btn-primary"  %>
        </div>

  <div class="container newbooking p-0">
    <div class="availability d-flex justify-content-around">
      <div class="form-wrapper mr-3" style="width: 270px;">
        <h1><i class="far fa-calendar-alt"></i></h1>

        <%= simple_form_for :search, method: "get" do |f| %>
          <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.button :submit, "Check availability",class: "btn btn-primary"%>
        <% end %>
      </div>

      <% if @available %>
        <%= render partial: "bookings/new", locals: { booking: @booking, restaurant: @restaurant, start_date: @start_date } %>

      <% end %>
      <div></div>
    </div>

    <h6 style="color: red"><%= @error_message if @user.nil?  %></h6>


    <% unless @user.nil? %>

      <h1><%= @user.first_name %>'s Preferences</h1>
      <% @user.categories.each do |category| %>
        <div class="white-card">
        <div class="d-flex flex-column align-items-center">
          <h2><%= category.name.capitalize %></h2>
          <% category.preferences.each do |preference| %>
            <div class="preferences">
              <h5> <i class="fa fa-heart mx-1"></i> <%= preference.name.capitalize %>: <%= preference.description.capitalize %></h5>
            </div>
          <% end %>
        </div>
      <% end %>
      </div>
    <% end %>



  <!-- END of user details -->


<h1>BOOKINGS</h1>
  <!-- The bookings section -->

    <% @bookings.each do |booking| %>

      <div class="card-product mt-2 rounded">
        <div class="card-product-infos ">
          <h2><%= booking.user.first_name %></h2>
          <p>Start date: <%= booking.start_date %></p>
          <p>Number of guests: <%= booking.number_of_guests %></p>
          <p>Note: <%= booking.notes %></p>
        </div>
      </div>

    <% end %>

</div>

